# .env example for pedidos-domicilio
# Copy to `.env` and adjust values for your environment before running `docker compose`.

#############################
# General
#############################
API_GATEWAY_URL=http://api-gateway:8000

#############################
# Authentication service (Mongo)
#############################
# Hostname must match the service name in docker-compose.yml
AUTH_SERVICE_URL=http://authentication:8001
AUTH_DATABASE_URL=mongodb://auth-db:27017/auth_db

#############################
# Postgres credentials (used by restaurantes and pedidos)
#############################
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# Restaurantes DB
RESTAURANTES_DB_HOST=restaurantes-db
RESTAURANTES_DB_NAME=service1_db
RESTAURANTES_DB_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${RESTAURANTES_DB_HOST}:5432/${RESTAURANTES_DB_NAME}

# Pedidos DB
PEDIDOS_DB_HOST=pedidos-db
PEDIDOS_DB_NAME=pedidos_db
PEDIDOS_DB_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${PEDIDOS_DB_HOST}:5432/${PEDIDOS_DB_NAME}

#############################
# Redis
#############################
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

#############################
# Service URLs for easy reference
#############################
AUTHENTICATION_URL=http://authentication:8001
RESTAURANTES_URL=http://restaurantes-service:8002
PEDIDOS_URL=http://pedidos-service:8003
